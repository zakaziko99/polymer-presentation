@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

@import '../../../../../styles/main.styl'

body
    section
        &.slide-custom-01,
        &.slide-custom-02,
        &.slide-custom-03,
        &.slide-custom-04
            h2, h3
                margin-bottom 3px
        &.slide-custom-27
            ul
                li
                    a
                        strong
                            color #06FF84
                            font-weight 700
                            text-transform uppercase
                        small
                            display block
                            color #7FCED0
                            font-size 0.750em
        &.slide-custom-28
            p
                position relative
                width 250px
                height 166px
                img
                    position absolute
                    top 50%
                    left 50%
                    width 0
                    transform translate(-50%, -50%)
                    transition width .3s ease-out;
                &.bespoke-bullet-active
                    img
                        width 250px
        .logos-set
            margin 20px
            border-radius 10px
            background rgba(#FFF, 0.05)
            img
                margin 20px
                vertical-align middle
