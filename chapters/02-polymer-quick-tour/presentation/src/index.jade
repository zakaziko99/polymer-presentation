      section.slide-custom-01(data-bespoke-hash='code-element')
        h2 Page élément
        h3.bullet mon-element.html
        pre.bullet.no-scroll.streched-code
          code.language-markup.
            &lt;link rel="import" href="bower_components/polymer/polymer.html"&gt;

            &lt;dom-module id="mon-element"&gt;
                &lt;style&gt; /* Style isolé pour l'élément */
                    h1 { color: red }
                &lt;/style&gt;

                &lt;template&gt; &lt;!-- Markup de l'élément --&gt;
                    &lt;h1&gt;Mon H1 personalisé&lt;/h1&gt;
                &lt;/template&gt;

                &lt;script&gt; // Api de l'élément
                    Polymer({
                        is: 'mon-element'
                    });
                &lt;/script&gt;
            &lt;/dom-module&gt;

