      section.slide-custom-01(data-bespoke-hash='properties-1')
        h2 Propriétés
        h3.bullet mon-element.html
        pre.bullet.no-scroll.streched-code
          code.language-markup.
            &lt;dom-module id="mon-element"&gt;
                &lt;template&gt; &lt;!-- Markup de l'élément --&gt;
                    &lt;p&gt;C'est &lt;span&gt;{{author}}&lt;/span&gt; qui l'a fait !!!&lt;/p&gt;
                &lt;/template&gt;

                &lt;script&gt; // Api de l'élément
                    Polymer({
                        is: 'mon-element',
                        properties: {   // Déclarer une propriété
                            author: {
                                type: String,
                                value: "Zakaria"
                            }
                        }
                    });
                &lt;/script&gt;
            &lt;/dom-module&gt;

